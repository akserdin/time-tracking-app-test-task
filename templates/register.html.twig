{% extends 'base.html.twig' %}

{% block title %}Registration{% endblock %}

{% block body %}
<h2 class="mb-3">Please register</h2>

<form method="post">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

    <div class="form-group">
        <label for="input-email">Email</label>
        <input type="text"
               value="{% if email is defined %}{{ email }}{% endif %}"
               name="email"
               id="input-email"
               class="form-control {% if errors is defined and errors.email is defined %}is-invalid{% endif %}"
               autofocus>

        {% if errors is defined and errors.email is defined %}
        <small class="text-danger">{{ errors.email }}</small>
        {% endif %}
    </div>

    <div class="form-group">
        <label for="input-password">Password</label>
        <input type="password"
               name="password"
               id="input-password"
               class="form-control {% if errors is defined and errors.password is defined %}is-invalid{% endif %}">

        {% if errors is defined and errors.password is defined %}
            <small class="text-danger">{{ errors.password }}</small>
        {% endif %}
    </div>

    <div class="form-group">
        <label for="input-password-confirm">Confirm password</label>
        <input type="password"
               name="password_confirm"
               id="input-password-confirm"
               class="form-control {% if errors is defined and errors.password_confirm is defined %}is-invalid{% endif %}">

        {% if errors is defined and errors.password_confirm is defined %}
            <small class="text-danger">{{ errors.password_confirm }}</small>
        {% endif %}
    </div>

    <button class="btn btn-primary" type="submit">Register</button>
</form>

<p class="mt-3">Already have an account? Please <a href="{{ path('app_login') }}">login</a></p>
{% endblock %}
